alignment top_right
background no
    background = true,
border_width 1
cpu_avg_samples 2
default_color green
default_outline_color green
default_shade_color green
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont DejaVu Sans Mono:size=12
gap_x 5
gap_y 30
minimum_size 5 5
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
stippled_borders 0
update_interval 1.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no
double_buffer yes
maximum_width 400

TEXT
${font Arial:bold}${color Tan1}HDD ${color DarkSlateGray}${fs_bar 10 /}
${color DimGray}/ $fs_type $alignr ${fs_used /} ${color b72e3f}(${fs_used_perc /}%) ${color DimGray}/ ${fs_size /} ${fs_bar 10, 200 /}
$hr
Δ $entropy_avail/$entropy_poolsize ($entropy_perc%) ${entropy_bar 10}
${font Arial:bold}${color Tan1}SYSTEM ${color DarkSlateGray} ${hr 2}
${color grey}Uptime:$color $uptime
$hr
${font Arial:bold}${color Tan2}NETWORK${color DarkSlateGray}${hr 2}
${if_up eth0}$font${color DimGray}eth0$alignr${addr eth0}
	${voffset -5}${color b72e3f}${font AvantGarde LT ExtraLight:pixelsize=15}net/up ${GOTO 100}net/dwn${color b72e3f}${font AvantGarde LT ExtraLight:pixelsize=15}${GOTO 200}total/up ${GOTO 300}total/dwn
	${font AvantGarde LT ExtraLight:pixelsize=15}${color ffffff}${upspeed eth0} ${GOTO 100}${color ffffff}${downspeed eth0} ${font AvantGarde LT ExtraLight:pixelsize=15}${GOTO 200}${color ffffff}${totalup eth0} ${GOTO 300}${color ffffff}${totaldown eth0}
	${color #888888}${downspeedgraph eth0 20,70 ff0000 0000ff -t} ${color #888888}${upspeedgraph eth0 20,70 0000ff ff0000 -t}
$endif$hr
${if_up wlan0}
	$font${color DimGray}wlan0 ${addr wlan0}
	${voffset -5}${color b72e3f}${font AvantGarde LT ExtraLight:pixelsize=15}net/up ${GOTO 100}net/dwn${color b72e3f}${font AvantGarde LT ExtraLight:pixelsize=15}${GOTO 200}total/up ${GOTO 300}total/dwn
	${font AvantGarde LT ExtraLight:pixelsize=15}${color ffffff}${upspeed wlan0} ${GOTO 100}${color ffffff}${downspeed wlan0} ${font AvantGarde LT ExtraLight:pixelsize=15}${GOTO 200}${color ffffff}${totalup wlan0} ${GOTO 300}${color ffffff}${totaldown wlan0}
	${color #888888}${downspeedgraph wlan0 20,70 ff0000 0000ff -t} ${color #888888}${upspeedgraph wlan0 20,70 0000ff ff0000 -t}
$endif$hr
${font Arial:bold}${color Tan1}PROCESSORS ${color DarkSlateGray}${cpu cpu0}% ${hwmon temp 1}°C ${color grey}$freq_g GHz${cpubar cpu0 10}$font${color DimGray}
${cpugraph cpu0 000000 ffffff}
Core1 ${cpu cpu1}% ${cpubar cpu1 10, 100}${GOTO 200}Core2 ${cpu cpu2}% ${cpubar cpu2 10, 100}
Core3 ${cpu cpu3}% ${cpubar cpu3 10, 100}${GOTO 200}Core4 ${cpu cpu4}% ${cpubar cpu4 10, 100}
${color grey}Processes:$color $processes  ${color grey}Running:$color $running_processes
${color grey}Name              PID   CPU%   MEM%
${color lightgrey}${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${color lightgrey}${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${color lightgrey}${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${color lightgrey}${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}

${font Arial:bold}${color Tan1}MEMORY ($memperc%) $mem / $memmax ${color DarkSlateGray}${membar 10}
${memgraph 000000 ffffff -t}
$font${color grey}Name              PID   CPU%   MEM%
${color lightgrey}${top_mem name 1} ${top_mem pid 1} ${top_mem cpu 1} ${top_mem mem 1}
${color lightgrey}${top_mem name 2} ${top_mem pid 2} ${top_mem cpu 2} ${top_mem mem 2}
${color lightgrey}${top_mem name 3} ${top_mem pid 3} ${top_mem cpu 3} ${top_mem mem 3}
${color lightgrey}${top_mem name 4} ${top_mem pid 4} ${top_mem cpu 4} ${top_mem mem 4}
${font Arial:bold}${color Tan1}SWAP ${color DarkSlateGray}$swap/$swapmax - $swapperc% ${swapbar 10}
${voffset -10}$color${font AvantGarde LT ExtraLight:pixelsize=125}${alignr}${time %H}${font AvantGarde LT ExtraLight:pixelsize=125}${alignr}${color b72e3f}${time %M}
${voffset -245}$color${font AvantGarde LT ExtraLight:pixelsize=20}
${color lightgrey}${time %A}
${color b72e3f}${time %d}
${color lightgrey}${time %B}
${color b72e3f}${time %Y}
${color lightgrey}$conky_build_arch
