alignment top_right
background no
border_width 1
cpu_avg_samples 2
default_color white
default_outline_color white
default_shade_color white
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont DejaVu Sans Mono:size=12
gap_x 5
gap_y 0
minimum_size 5 5
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_type desktop
stippled_borders 0
update_interval 1.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no

TEXT
${font Arial:bold}${color Tan1}HDD ${color DarkSlateGray}${fs_bar /}
$font${color DimGray}/home $alignc ${fs_used /home} / ${fs_size /home} $alignr ${fs_free_perc /home}%
/ $color${fs_used /}/${fs_size /} ${fs_bar 6 /}
$hr
$entropy_avail $entropy_poolsize ${entropy_bar 4,100}
${font Arial:bold:size=10}${color Tan1}SYSTEM ${color DarkSlateGray} ${hr 2}
${color grey}Uptime:$color $uptime
${color grey}Swap Usage:$color $swap/$swapmax - $swapperc% ${swapbar 4}
$hr
${font Arial:bold:size=10}${color Tan2}NETWORK ${color DarkSlateGray}${hr 2}
${voffset -5}${color b72e3f}${font AvantGarde LT ExtraLight:pixelsize=15}${GOTO 200}net/up ${GOTO 300}${alignr}net/dwn
${font AvantGarde LT ExtraLight:pixelsize=15}${GOTO 200}${color ffffff}${upspeed eth0} ${GOTO 300}${alignr}${color ffffff}${downspeed eth0}
${color b72e3f}${font AvantGarde LT ExtraLight:pixelsize=15}${GOTO 200}total/up ${GOTO 300}${alignr}total/dwn
${font AvantGarde LT ExtraLight:pixelsize=15}${GOTO 200}${color ffffff}${totalup eth0} ${GOTO 300}${alignr}${color ffffff}${totaldown eth0}

$font${color DimGray}IP on eth0 $alignr ${addr eth0}
${color #888888}${downspeedgraph eth0 20,70 ff0000 0000ff} ${color #888888}${upspeedgraph eth0 20,70 0000ff ff0000}
$hr
${color grey}Frequency (in GHz):$color $freq_g
${color grey}Processes:$color $processes  ${color grey}Running:$color $running_processes
${font Arial:bold:size=10}${color Tan1}PROCESSORS ${color DarkSlateGray}${cpu 0}% ${hwmon temp 1}Â°C ${cpubar 4}
$font${color DimGray}Core1 ${cpu cpu1}% ${cpubar cpu1}
Core2 ${cpu cpu2}% ${cpubar cpu2}
Core3 ${cpu cpu3}% ${cpubar cpu3}
Core4 ${cpu cpu4}% ${cpubar cpu4}

${color grey}Name              PID   CPU%   MEM%
${color lightgrey}${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${color lightgrey}${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${color lightgrey}${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${color lightgrey}${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}

${font Arial:bold}${color Tan1}MEMORY ($memperc%) $mem / $memmax ${color DarkSlateGray} $membar
$font${color grey}Name              PID   CPU%   MEM%
${color lightgrey}${top_mem name 1} ${top_mem pid 1} ${top_mem cpu 1} ${top_mem mem 1}
${color lightgrey}${top_mem name 2} ${top_mem pid 2} ${top_mem cpu 2} ${top_mem mem 2}
${color lightgrey}${top_mem name 3} ${top_mem pid 3} ${top_mem cpu 3} ${top_mem mem 3}
${color lightgrey}${top_mem name 4} ${top_mem pid 4} ${top_mem cpu 4} ${top_mem mem 4}

${color ffffff}${font AvantGarde LT ExtraLight:pixelsize=150}${alignr}${time %H}${font AvantGarde LT ExtraLight:pixelsize=150}${alignr}${color b72e3f}${time %M}
${voffset -140}${color ffffff}${font AvantGarde LT ExtraLight:pixelsize=30}${alignr}${time %A %d %B, %Y}
