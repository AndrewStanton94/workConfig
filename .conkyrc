alignment top_right
background no
    background = true,
border_width 1
cpu_avg_samples 2
default_color 8700df
default_outline_color green
default_shade_color green
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont DejaVu Sans Mono:size=12
gap_x 5
gap_y 30
minimum_size 5 5
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
stippled_borders 0
update_interval 1.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no
double_buffer yes
maximum_width 400

color0 820C1D	# Red
color1 Tan1		# Section title
color2 DarkSlateGray
color3 DimGray

TEXT
${font Arial:bold}${color1}HDD ${color2}${fs_bar 10 /}
${color3}/ $fs_type $alignr ${fs_used /} $color0(${fs_used_perc /}%) ${color3}/ ${fs_size /} ${fs_bar 10, 200 /}
${font Arial:bold}${color1}SYSTEM ${color2} ${hr 2}
${color3}Uptime:$color $uptime
${font Arial:bold}${color1}NETWORK${color2}${hr 2}
${if_up eth0}$font${color3}eth0$alignr${addr eth0}
	${voffset -5}$color0${font AvantGarde LT ExtraLight:pixelsize=15}net/up ${GOTO 100}net/dwn${GOTO 200}total/up ${GOTO 300}total/dwn
	${color3}${upspeed eth0} ${GOTO 100}${downspeed eth0} ${GOTO 200}${totalup eth0} ${GOTO 300}${totaldown eth0}
	${voffset 10}↓${voffset -10} ${downspeedgraph eth0 20,70 ff0000 0000ff -t} ${voffset 10}↑${voffset -10}${upspeedgraph eth0 20,70 0000ff ff0000 -t}
$endif
${if_up wlan0}
	${voffset -20}$font${color3}wlan0 ${addr wlan0}
	${voffset -5}$color0${font AvantGarde LT ExtraLight:pixelsize=15}net/up ${GOTO 100}net/dwn$color0${GOTO 200}total/up ${GOTO 300}total/dwn
	${color3}${upspeed wlan0} ${GOTO 100}${downspeed wlan0} ${GOTO 200}${totalup wlan0} ${GOTO 300}${totaldown wlan0}
	${voffset 10}↓${voffset -10}${downspeedgraph wlan0 20,70 ff0000 0000ff -t} ${voffset 10}↑${voffset -10}${upspeedgraph wlan0 20,70 0000ff ff0000 -t}
$endif${voffset -15}$hr
${font Arial:bold}${color1}PROCESSORS ${color2}${cpu cpu0}% ${hwmon temp 1}°C $freq_g GHz${cpubar cpu0 10}$font${color3}
${cpugraph cpu0 000000 ffffff}
Core1 ${cpu cpu1}% ${cpubar cpu1 10, 100}${GOTO 200}Core2 ${cpu cpu2}% ${cpubar cpu2 10, 100}
Core3 ${cpu cpu3}% ${cpubar cpu3 10, 100}${GOTO 200}Core4 ${cpu cpu4}% ${cpubar cpu4 10, 100}
${color3}Processes:$color $processes  ${color3}Running:$color $running_processes
${color3}Name              PID   CPU%   MEM%
${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
${font Arial:bold}${color1}MEMORY ($memperc%) $mem / $memmax ${color2}${membar 10}
${memgraph 000000 ff0000 -t}
$font${color3}Name              PID   CPU%   MEM%
${top_mem name 1} ${top_mem pid 1} ${top_mem cpu 1} ${top_mem mem 1}
${top_mem name 2} ${top_mem pid 2} ${top_mem cpu 2} ${top_mem mem 2}
${top_mem name 3} ${top_mem pid 3} ${top_mem cpu 3} ${top_mem mem 3}
${top_mem name 4} ${top_mem pid 4} ${top_mem cpu 4} ${top_mem mem 4}
${voffset -10}$color${font AvantGarde LT ExtraLight:pixelsize=110}${alignr}${time %H}${font AvantGarde LT ExtraLight:pixelsize=110}${alignr}$color0${time %M}
${voffset -220}$color${font AvantGarde LT ExtraLight:pixelsize=30}
${time %a} $color0${time %d}$color
${voffset -25}
${time %b} $color0${time %y}$color$font
${voffset -10}
$conky_build_arch
${font Arial:bold}${color1}SWAP ${color2}$swap/$swapmax - $swapperc% ${swapbar 10}
$colorΔ $entropy_avail/$entropy_poolsize ($entropy_perc%) ${entropy_bar 10}
